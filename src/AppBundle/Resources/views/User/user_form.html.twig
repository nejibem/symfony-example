{% extends 'AppBundle:Template:base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}
    {% if user.id %}Edit{% else %}Add{% endif %} User
{% endblock %}

{% block body %}

    <div class='row'>
        <div class='col-md-12'>

            <div class="page-header">
                <h1>Users</h1>
            </div>

            {{ include('AppBundle:Template:layout_alert.html.twig', {'successMessages': successMessages, 'errorMessages': errorMessages}) }}

            {{ form_start(form, { 'style': 'horizontal', 'label_col': 2, 'widget_col': 6 }) }}
                <legend>{% if user.id %}Edit{% else %}Add{% endif %} User</legend>
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-info">Save</button>
                    </div>
                </div>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}