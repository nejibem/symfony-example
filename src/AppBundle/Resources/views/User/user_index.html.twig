{% extends 'AppBundle:Template:base.html.twig' %}

{% block title %}
    Users
{% endblock %}

{% block body %}

    <div class='row'>
        <div class='col-md-12'>

            <div class="page-header">
                <h1>Users</h1>
            </div>
            <div class="navbar">
                <a href="/admin/user/add" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create a new User</a>
            </div>

            {{ include('AppBundle:Template:layout_alert.html.twig', {'successMessages': successMessages, 'errorMessages': errorMessages}) }}

            <table class="table table-striped table-bordered sortable ui-sortable">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="/admin/user/switch-active/{{ user.id }}"
                            class="btn btn-xs btn-{% if user.getIsActive() %}success{% else %}danger{% endif %}">
                                {% if user.getIsActive() %}Active{% else %}Inactive{% endif %}
                            </a>
                        </td>
                        <td><a href="/admin/user/edit/{{ user.id }}"
                               class="btn btn-xs btn-info">
                                Edit
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}
