{% extends 'AppBundle:Template:base.html.twig' %}

{% block title %}
    Reset Password
{% endblock %}

{% block body %}

    <div class='row'>
        <div class='col-md-12'>

            <div class="page-header">
                <h1>Reset Password</h1>
            </div>

            <div class="alert alert-info">
                Reset Password for <strong>{{ user.getUsername() }}</strong>
            </div>

            {{ include('AppBundle:Template:layout_alert.html.twig', {'successMessages': successMessages, 'errorMessages': errorMessages}) }}

            <form class="form-horizontal" method="post" novalidate role="form">
                <legend>Reset password</legend>
                {{ form_widget(form, {'form_type': 'horizontal'}) }}
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn">Save</button>
                    </div>
                </div>
            </form>

        </div>
    </div>

{% endblock %}