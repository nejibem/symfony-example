{% extends 'AppBundle:Template:base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}
    Reset Password
{% endblock %}

{% block body %}

    <div class='row'>
        <div class='col-md-12'>

            <div class="page-header">
                <h1>Reset Password</h1>
            </div>

            {% if success == false %}
                <div class="alert alert-info">
                    Enter Email to reset password.
                </div>
            {% endif %}

            {{ include('AppBundle:Template:layout_alert.html.twig', {'successMessages': successMessages, 'errorMessages': errorMessages}) }}

            {% if success == false %}
                <form class="form-horizontal" method="post" novalidate="" role="form">
                    <legend>Request password reset link.</legend>
                    <div id="user">
                        <div class="form-group">
                            <label for="user_email" class="col-sm-2 control-label">Email</label>
                            <div class="controls">
                                <input type="email" class="form-control" id="email" name="email" required="required" value="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn">Reset</button>
                        </div>
                    </div>
                </form>
            {% endif %}

        </div>
    </div>

{% endblock %}