{% extends 'AppBundle:Template:base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block body %}

    <div class="row login-row">
        <div class="col-md-6 col-md-offset-3">
            {% if error %}
                <div id="alert-container">
                    <div class="alert alert-warning">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Warning!</strong> {{ error.getMessage() }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">
                <legend>Login</legend>
                <form class="form-horizontal" method="post" action="/login_check" role="form">
                    <div class="form-group">
                        <label for="_username" class="col-sm-4 control-label">Username:</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="_username" name="_username" value="{{ last_username }}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="_password" class="col-sm-4 control-label">Password:</label>
                        <div class="col-sm-6">
                            <input type="password" class="form-control" id="_password" name="_password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-6">
                            <input type="submit" id="submit" name="submit" value="Sign In" class="btn btn-success" />
                        </div>
                    </div>
                </form>
                <div class="clearfix">
                    <hr>
                    <a href="/password/email" class="pull-right">Forgotten Password?</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}